
<%- include('header') -%>
<div class="text-center center-div login-div1" id="login">
    <div class="container w-25 border py-5 login-div2">
        <div class="title pb-5 login-div3">
            <h2 class="font-weight-bold">Login Page</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center login-div4" style="color:white">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3 login-form">
            <div class="form-group">
                <input type="email" class="form-control login-form-div1" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group login-form-div2">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill login-form-btn">Submit</button>
        </form>
    </div>
</div>


<%- include('footer') -%>
